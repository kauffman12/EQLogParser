<local:SummaryTable x:Class="EQLogParser.HealingSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:EQLogParser"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1200">
  <Grid>
    <Grid.Resources>
      <local:ZeroConverter x:Key="ZeroConverter" />
      <local:NumberFormatConverter x:Key="NumberFormatConverter" />
    </Grid.Resources>
    <Grid.RowDefinitions>
      <RowDefinition Height="30" />
      <RowDefinition Height="300*" />
    </Grid.RowDefinitions>
    <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0" >
      <Label x:Name="title" Style="{StaticResource titleStyle}"/>
    </StackPanel>
    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
      <ComboBox Margin="0" x:Name="classesList" Height="26" SelectionChanged="ClassSelectionChanged" />
      <ComboBox x:Name="selectedColumns" Tag="HealingSummaryColumns" Height="26" Width="140" Margin="0,0,4,0" DropDownClosed="SelectDataGridColumns" BorderBrush="#FF707070">
        <ComboBox.ItemTemplateSelector>
          <local:ComboBoxItemTemplateSelector>
            <local:ComboBoxItemTemplateSelector.SelectedItemTemplates>
              <DataTemplate DataType="{x:Type local:ComboBoxItemDetails}">
                <TextBlock Text="{Binding SelectedText}" />
              </DataTemplate>
            </local:ComboBoxItemTemplateSelector.SelectedItemTemplates>
            <local:ComboBoxItemTemplateSelector.DropDownItemTemplates>
              <DataTemplate DataType="{x:Type local:ComboBoxItemDetails}">
                <StackPanel Orientation="Horizontal">
                  <CheckBox IsChecked="{Binding IsChecked}" Width="20" />
                  <TextBlock Text="{Binding Text}" IsHitTestVisible="false" />
                </StackPanel>
              </DataTemplate>
            </local:ComboBoxItemTemplateSelector.DropDownItemTemplates>
          </local:ComboBoxItemTemplateSelector>
        </ComboBox.ItemTemplateSelector>
      </ComboBox>      
    </StackPanel>
    <syncfusion:SfDataGrid x:Name="dataGrid"
                           AllowDraggingColumns="True"
                           AllowResizingColumns="True"
                           AllowSorting="True"
                           AutoGenerateColumns="False"
                           ColumnSizer="AutoWithLastColumnFill"
                           FrozenColumnCount="2"
                           Grid.Row="1"
                           IsReadOnly="True"
                           ItemsSourceChanged="ItemsSourceChanged"
                           SelectionMode="Extended"
                           SelectionChanged="DataGridSelectionChanged"
                           ShowRowHeader="False">
      <syncfusion:SfDataGrid.ContextMenu>
        <ContextMenu>
          <MenuItem IsEnabled="False" x:Name="copyHealParseToEQClick" Header="Copy Selected Parse" Click="CopyToEQClick">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="copyHealParseIcon" Style="{StaticResource iconStyle}" Icon="Solid_Copy" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem IsEnabled="False" x:Name="copyTopHealsParseToEQClick" Header="Copy Top Heals Parse" Click="CopyTopHealsToEQClick">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="copyTopHealsParseIcon" Style="{StaticResource iconStyle}" Icon="Solid_Copy" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem IsEnabled="False" x:Name="copyOptions" Header="Copy Summary As">
            <MenuItem.Icon>
              <fa:ImageAwesome Style="{StaticResource iconStyle}" Icon="Solid_Copy" />
            </MenuItem.Icon>
            <MenuItem IsEnabled="True" x:Name="copyCsvClick" Header="CSV" Click="CopyCsvClick">
              <MenuItem.Icon>
                <fa:ImageAwesome Style="{StaticResource iconStyle}" Icon="Solid_Table" />
              </MenuItem.Icon>
            </MenuItem>
            <MenuItem IsEnabled="True" x:Name="createImageClick" Header="Image" Click="CreateImageClick">
              <MenuItem.Icon>
                <fa:ImageAwesome Style="{StaticResource iconStyle}" Icon="Solid_Image" />
              </MenuItem.Icon>
            </MenuItem>
          </MenuItem>
          <Separator />
          <MenuItem x:Name="menuItemShowSpellCasts" IsEnabled="False" Header="Spell Cast Order">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="showSpellCastsIcon" Style="{StaticResource iconStyle}" Icon="Solid_ListOl" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem x:Name="menuItemShowSpellCounts" IsEnabled="False" Header="Spell Counts">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="showSpellCountsIcon" Style="{StaticResource iconStyle}" Icon="Solid_Calculator" />
            </MenuItem.Icon>
          </MenuItem>
          <Separator />
          <MenuItem x:Name="menuItemShowBreakdown" IsEnabled="False" Header="Healing Breakdown">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="showBreakdownIcon" Style="{StaticResource iconStyle}" Icon="Solid_Heart" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem x:Name="menuItemShowHealingLog" IsEnabled="False" Header="Healing Log" Click="DataGridHealingLogClick">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="showHealingLogIcon" Style="{StaticResource iconStyle}" Icon="Solid_File" />
            </MenuItem.Icon>
          </MenuItem>
          <Separator />
          <MenuItem x:Name="menuItemSelectAll" IsEnabled="False" Header="Select All" Click="DataGridSelectAllClick">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="selectAllIcon" Style="{StaticResource iconStyle}" Icon="Solid_Square" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem x:Name="menuItemUnselectAll" IsEnabled="False" Header="Unselect All" Click="DataGridUnselectAllClick">
            <MenuItem.Icon>
              <fa:ImageAwesome x:Name="unselectAllIcon" Style="{StaticResource iconStyle}" Icon="Regular_Square" />
            </MenuItem.Icon>
          </MenuItem>
        </ContextMenu>
      </syncfusion:SfDataGrid.ContextMenu>
      <syncfusion:SfDataGrid.Columns>
        <syncfusion:GridTextColumn MappingName="Rank" HeaderText="" TextAlignment="Right" />
        <syncfusion:GridTextColumn MappingName="Name" HeaderText="Name" />
        <syncfusion:GridTextColumn Width="60" DisplayBinding="{Binding Path=PercentOfRaid, Converter={StaticResource ZeroConverter}}" ShowHeaderToolTip="True" HeaderToolTipTemplate="{StaticResource HeaderTotalTemplateToolTip}" TextAlignment="Right" HeaderText="% Total" />
        <syncfusion:GridTextColumn Width="100" DisplayBinding="{Binding Path=Total, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Healing" />
        <syncfusion:GridTextColumn Width="100" DisplayBinding="{Binding Path=Extra, Converter={StaticResource NumberFormatConverter}}" ShowHeaderToolTip="True" HeaderToolTipTemplate="{StaticResource HeaderOverHealTemplateToolTip}" TextAlignment="Right" HeaderText="Over Healed" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=DPS, Converter={StaticResource NumberFormatConverter}}" ShowHeaderToolTip="True" HeaderToolTipTemplate="{StaticResource HeaderHPSTemplateToolTip}" TextAlignment="Right" HeaderText="HPS" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=SDPS, Converter={StaticResource NumberFormatConverter}}" ShowHeaderToolTip="True" HeaderToolTipTemplate="{StaticResource HeaderSHPSTemplateToolTip}" TextAlignment="Right" HeaderText="SHPS" />
        <syncfusion:GridTextColumn Width="70 " DisplayBinding="{Binding Path=TotalSeconds, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Sec" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=Hits, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="# Heals" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=Max, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Max Heal" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=Avg, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Av Heal" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=AvgCrit, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Av Crit" />
        <syncfusion:GridTextColumn Width="70" DisplayBinding="{Binding Path=AvgLucky, Converter={StaticResource NumberFormatConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="Av Lucky" />
        <syncfusion:GridTextColumn Width="60" DisplayBinding="{Binding Path=ExtraRate, Converter={StaticResource ZeroConverter}}" ShowHeaderToolTip="True" HeaderToolTipTemplate="{StaticResource HeaderOverHealPercentTemplateToolTip}" TextAlignment="Right" HeaderText="% Over" />
        <syncfusion:GridTextColumn Width="60" DisplayBinding="{Binding Path=CritRate, Converter={StaticResource ZeroConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="% Crit" />
        <syncfusion:GridTextColumn Width="60" DisplayBinding="{Binding Path=LuckRate, Converter={StaticResource ZeroConverter}}" HorizontalHeaderContentAlignment="Center" TextAlignment="Right" HeaderText="% Luck" />
        <syncfusion:GridTextColumn MappingName="ClassName" HorizontalHeaderContentAlignment="Center" HeaderText="Class" />
      </syncfusion:SfDataGrid.Columns>
    </syncfusion:SfDataGrid>
  </Grid>
</local:SummaryTable>
