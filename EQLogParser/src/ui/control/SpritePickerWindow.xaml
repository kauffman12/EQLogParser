<Window x:Class="EQLogParser.SpritePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EQ Sprite Picker" Height="520" Width="760">
  <Grid Margin="8">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0">
      <Button Content="Browse Folder" Click="BrowseClick" Width="120" Margin="0,0,0,8" />
      <ListBox x:Name="sheetsList" SelectionChanged="SheetsList_SelectionChanged" />
    </StackPanel>

    <StackPanel Grid.Column="1">
      <Image x:Name="sheetImage" Height="240" Stretch="None" Margin="0,0,0,8" />
      <UniformGrid x:Name="gridPanel" Rows="6" Columns="6" />
    </StackPanel>
  </Grid>
</Window>
