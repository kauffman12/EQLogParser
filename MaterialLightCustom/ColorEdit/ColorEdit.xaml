                                <Trigger Property="IsAlphaVisible" Value="False">
                                    <Setter TargetName="AlphaLabel" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="AlphaVal" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="EnableGradientToSolidSwitch" Value="false">
                                    <Setter TargetName="EnableSwitch" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="PART_ColorStringEditor" Property="Width" Value="115" />
                                </Trigger>
                                <Trigger Property="BrushMode" Value="Solid">
                                    <Setter TargetName="GridGradient" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="IsOpenGradientPropertyEditor" Value="True">
                                    <Setter TargetName="GradPopup" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="LinearGrid" Property="Visibility" Value="Visible" />
                                </Trigger>
                                <Trigger Property="IsOpenGradientPropertyEditor" Value="False">
                                    <Setter TargetName="GradPopup" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="LinearGrid" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="RadialGrid" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="IsGradientPropertyEnabled" Value="False">
                                    <Setter TargetName="GridBorder" Property="Visibility" Value="Collapsed" />
