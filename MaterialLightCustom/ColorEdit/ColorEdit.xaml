                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=Center}" />
                                                                    <TextBlock
                                                                        Grid.Row="3"
                                                                        Grid.Column="0"
                                                                        Margin="4,2,2,2"
