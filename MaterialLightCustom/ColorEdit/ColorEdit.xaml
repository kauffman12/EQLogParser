                                SnapsToDevicePixels="True">
                                <Grid x:Name="Grid">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="18" />
                                        <ColumnDefinition Width="90" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="96" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        FontSize="9"
                                        Style="{StaticResource TextBlockStyle}">
                                        R:
                                        <TextBlock.ToolTip>
                                            <ToolTip Style="{StaticResource MetroToolTipCustomStyle}">
                                                <TextBlock Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=RedTooltipText}" />
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        FontSize="9"
                                        Style="{StaticResource TextBlockStyle}">
                                        G:
                                        <TextBlock.ToolTip>
                                            <ToolTip Style="{StaticResource MetroToolTipCustomStyle}">
                                                <TextBlock Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=GreenTooltipText}" />
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        FontSize="9"
                                        Style="{StaticResource TextBlockStyle}">
                                        B:
                                        <TextBlock.ToolTip>
                                            <ToolTip Style="{StaticResource MetroToolTipCustomStyle}">
                                                <TextBlock Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=BlueTooltipText}" />
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <TextBlock
                                        Name="AlphaText"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        FontSize="9"
                                        Style="{StaticResource TextBlockStyle}"
                                        Visibility="Visible">
                                        A:
                                        <TextBlock.ToolTip>
                                            <ToolTip Style="{StaticResource MetroToolTipCustomStyle}">
                                                <TextBlock Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=AlphaTooltipText}" />
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <Slider
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Background="{TemplateBinding BackgroundR}"
                                        Style="{StaticResource MetroSliderCustomStyle}"
                                        Value="{Binding Path=R, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Slider
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Background="{TemplateBinding BackgroundG}"
                                        Style="{StaticResource MetroSliderCustomStyle}"
                                        Value="{Binding Path=G, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Slider
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Background="{TemplateBinding BackgroundB}"
                                        Style="{StaticResource MetroSliderCustomStyle}"
                                        Value="{Binding Path=B, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Slider
                                        Name="AlphaSlider"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Background="{TemplateBinding BackgroundA}"
                                        Style="{StaticResource MetroSliderCustomStyle}"
                                        Value="{Binding Path=A, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Margin="3,3"
                                        FontSize="9"
                                        Text="{shared:ScRGBColorExtension R}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="3,3"
                                        FontSize="9"
                                        Text="{shared:ScRGBColorExtension G}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="3,3"
                                        FontSize="9"
                                        Text="{shared:ScRGBColorExtension B}" />
                                    <TextBlock
                                        Name="AlphaValue"
                                        Grid.Row="3"
                                        Grid.Column="2"
                                        Margin="3,3"
                                        FontSize="9"
                                        Text="{shared:ScRGBColorExtension A}"
                                        Visibility="Visible" />
                                    <Rectangle
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="3"
                                        Margin="5,4,5,4"
                                        Fill="{StaticResource BrushForTransparency}" />
                                    <Rectangle
                                        Name="ColorRect"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="3"
                                        Margin="5,4,5,4"
                                        Fill="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrush}}"
                                        Stroke="Black"
                                        StrokeThickness="1" />
                                    <StackPanel
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        Margin="5,1,5,1"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Button
                                            Width="20"
                                            Margin="0,0,2,0"
                                            Command="shared:ColorEdit.M_changeColorWhite">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border
                                                        Background="White"
                                                        BorderBrush="Black"
                                                        BorderThickness="1"
                                                        CornerRadius="0"
                                                        SnapsToDevicePixels="True" />
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button
                                            Width="20"
                                            Margin="0,0,2,0"
                                            Command="shared:ColorEdit.M_changeColorBlack">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border
                                                        Background="Black"
                                                        CornerRadius="0"
                                                        SnapsToDevicePixels="True" />
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <shared:BorderEyeDrop
                                            Name="EyeDropBorder"
                                            Width="20"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="0">
                                            <Image
                                                Name="PART_Image"
                                                Width="15"
                                                Height="15"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="pack://application:,,,/Syncfusion.Shared.WPF;component/Controls/ColorPicker/Images/EyeDropGray.png" />
                                        </shared:BorderEyeDrop>
                                    </StackPanel>
                                    <TextBox
                                        Name="PART_ColorStringEditor"
                                        Grid.Row="3"
                                        Grid.Column="3"
                                        Width="68"
                                        MinHeight="18"
                                       
                                        Margin="1"
                                        MaxLength="9"
                                        Text="{Binding Color, Mode=TwoWay, UpdateSourceTrigger=LostFocus, Converter={StaticResource ColorToString}, RelativeSource={RelativeSource TemplatedParent}}"
                                        TextBlock.FontSize="9" />
                                    <shared:ColorBar
                                        Name="PickerColorBar"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="3"
                                        Height="20"
                                        HorizontalAlignment="Stretch" />

                                    <StackPanel
                                        Name="EnableSwitch"
                                        Grid.Row="4"
                                        Grid.Column="4"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Button
                                            Name="Solid"
                                            Width="25"
                                            Margin="2,2,3,1">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border
                                                        Background="{StaticResource MetroSolidButtonBackground}"
                                                        BorderBrush="#FF231F20"
                                                        BorderThickness="1"
                                                        CornerRadius="0" />
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button
                                            Name="Gradient"
                                            Width="25"
                                            Margin="2,2,2,1">
                                            <Button.Template>
                                                <ControlTemplate>
                                                    <Border
                                                        Background="{StaticResource MetroGradientButtonBackground}"
                                                        BorderBrush="#FF231F20"
                                                        BorderThickness="1"
                                                        CornerRadius="0" />
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                    <Border
                                        Name="GridBorder"
                                        Grid.Row="5"
                                        Grid.ColumnSpan="4"
                                        Margin="0"
                                        Background="Transparent"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="0"
                                        SnapsToDevicePixels="True">
                                        <Grid>
                                            <Grid Name="GridGradient" Margin="0,2,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Margin="3,0,0,0">
                                                    <Canvas x:Name="GradientBar" Height="25">
                                                        <Rectangle
                                                            x:Name="GradRect"
                                                            Width="150"
                                                            Height="15"
                                                            Stroke="#FF231F20"
                                                            StrokeThickness="0.5">
                                                            <Rectangle.Fill>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Offset="0" Color="#FF000000" />
                                                                    <GradientStop Offset="1" Color="#FFFFFFFF" />
                                                                </LinearGradientBrush>
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                    </Canvas>
                                                </Grid>

                                                <StackPanel
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="25,0,0,0"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Name="linear"
                                                        Width="25"
                                                        Height="20"
                                                        Margin="2,2,3,1"
                                                        VerticalAlignment="Center">
                                                        <Button.Content>
                                                            <!--<ControlTemplate>-->
                                                            <Border
                                                                Width="15"
                                                                Height="12"
                                                                Background="{StaticResource LinearBrushKey}"
                                                                BorderBrush="#FF231F20"
                                                                BorderThickness="0.5" />
                                                            <!--</ControlTemplate>-->
                                                        </Button.Content>
                                                    </Button>
                                                    <Button
                                                        Name="radial"
                                                        Width="25"
                                                        Height="20"
                                                        Margin="0,2,3,1"
                                                        VerticalAlignment="Center">
                                                        <Button.Content>
                                                            <!--<ControlTemplate>-->
                                                            <Border
                                                                Width="15"
                                                                Height="12"
                                                                Background="{StaticResource ClassicRadialBrushKey}"
                                                                BorderBrush="#FF231F20"
                                                                BorderThickness="0.5" />
                                                            <!--</ControlTemplate>-->
                                                        </Button.Content>
                                                    </Button>
                                                    <Button
                                                        Name="Reverse"
                                                        Width="25"
                                                        Height="20"
                                                        Margin="0,2,3,1"
                                                        VerticalAlignment="Center">
                                                        <Button.Content>
                                                            <!--<ControlTemplate>-->
                                                            <Border
                                                                Width="15"
                                                                Height="12"
                                                                Background="{StaticResource ReverseBrushKey}" />
                                                            <!--</ControlTemplate>-->
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>

                                                <Grid
                                                    Name="GridPopup"
                                                    Grid.Row="1"
                                                    Grid.ColumnSpan="2"
                                                    Visibility="Visible">
                                                    <StackPanel>
                                                        <Border
                                                            Name="GradPopup"
                                                            Grid.Row="2"
                                                            Grid.ColumnSpan="2"
                                                            Width="230"
                                                            MinWidth="230"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="0"
                                                            SnapsToDevicePixels="True"
                                                            Visibility="Visible">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>

                                                                <Grid x:Name="LinearGrid" Grid.Row="0">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="2.5*" />
                                                                        <ColumnDefinition Width="7.5*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid Grid.Row="0" Grid.Column="1">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="75" />
                                                                            <ColumnDefinition Width="75" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock
                                                                            Grid.Column="0"
                                                                            Margin="15,2,0,1"
                                                                            HorizontalAlignment="Center"
                                                                            FontSize="10"
                                                                            Text="X" />
                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            Margin="10,2,0,1"
                                                                            HorizontalAlignment="Center"
                                                                            FontSize="10"
                                                                            Text="Y" />
                                                                    </Grid>

                                                                    <StackPanel
                                                                        Grid.Row="1"
                                                                        Grid.Column="1"
                                                                        Margin="2"
                                                                        Orientation="Horizontal">
                                                                        <shared:UpDown
                                                                            x:Name="startx"
                                                                            Width="80"
                                                                            MinHeight="25"                                                                           
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                        <shared:UpDown
                                                                            x:Name="starty"
                                                                            Width="80"
                                                                            MinHeight="25"                                                                           
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                    </StackPanel>
                                                                    <TextBlock
                                                                        Grid.Row="1"
                                                                        Grid.Column="0"
                                                                        Margin="8,2,2,2"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="10"
                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=StartPoint}" />
                                                                    <TextBlock
                                                                        Grid.Row="2"
                                                                        Grid.Column="0"
                                                                        Margin="8,2,2,2"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="10"
                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=EndPoint}" />

                                                                    <StackPanel
                                                                        Grid.Row="2"
                                                                        Grid.Column="1"
                                                                        Margin="2"
                                                                        Orientation="Horizontal">
                                                                        <shared:UpDown
                                                                            x:Name="endx"
                                                                            Width="80"                                                                           
                                                                            MinHeight="25"
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                        <shared:UpDown
                                                                            Name="endy"
                                                                            Width="80"                                                                           
                                                                            MinHeight="25"
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                    </StackPanel>
                                                                </Grid>

                                                                <Grid
                                                                    x:Name="RadialGrid"
                                                                    Grid.Row="1"
                                                                    Visibility="Collapsed">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid Grid.Row="0" Grid.Column="1">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="75" />
                                                                            <ColumnDefinition Width="75" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock
                                                                            Grid.Column="0"
                                                                            Margin="15,2,0,1"
                                                                            HorizontalAlignment="Center"
                                                                            FontSize="10"
                                                                            Text="X" />
                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            Margin="10,2,0,1"
                                                                            HorizontalAlignment="Center"
                                                                            FontSize="10"
                                                                            Text="Y" />
                                                                    </Grid>

                                                                    <TextBlock
                                                                        Grid.Row="1"
                                                                        Grid.Column="0"
                                                                        Margin="4,2,2,2"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="10"
                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=GradientOrigin}" />
                                                                    <TextBlock
                                                                        Grid.Row="2"
                                                                        Grid.Column="0"
                                                                        Margin="4,2,2,2"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="10"
                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=Center}" />
                                                                    <TextBlock
                                                                        Grid.Row="3"
                                                                        Grid.Column="0"
                                                                        Margin="4,2,2,2"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="10"
                                                                        Text="{Sync_Resources:SharedLocalizationResourceExtension ResourceName=Radius}" />

                                                                    <StackPanel
                                                                        Grid.Row="1"
                                                                        Grid.Column="1"
                                                                        Margin="2"
                                                                        Orientation="Horizontal">
                                                                        <shared:UpDown
                                                                            x:Name="gradx"
                                                                            Width="70"
                                                                            MinHeight="25"                                                                           
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01"
                                                                            Visibility="Visible" />
                                                                        <shared:UpDown
                                                                            x:Name="grady"
                                                                            Width="70"
                                                                            MinHeight="25"                                                                           
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01"
                                                                            Visibility="Visible" />
                                                                    </StackPanel>
                                                                    <StackPanel
                                                                        Grid.Row="2"
                                                                        Grid.Column="1"
                                                                        Margin="2"
                                                                        Orientation="Horizontal">
                                                                        <shared:UpDown
                                                                            x:Name="centrex"
                                                                            Width="70"
                                                                            MinHeight="25"
                                                                            Margin="1"                                                                           
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                        <shared:UpDown
                                                                            x:Name="centrey"
                                                                            Width="70"
                                                                            MinHeight="25"
                                                                            Margin="1"                                                                           
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                    </StackPanel>
                                                                    <StackPanel
                                                                        Grid.Row="3"
                                                                        Grid.Column="1"
                                                                        Margin="2"
                                                                        Orientation="Horizontal">
                                                                        <shared:UpDown
                                                                            Name="radiusx"
                                                                            Width="70"
                                                                            MinHeight="25"                                                                           
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                        <shared:UpDown
                                                                            Name="radiusy"
                                                                            Width="70"                                                                           
                                                                            MinHeight="25"
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger SourceName="EyeDropBorder" Property="IsMouseCaptured" Value="True">
                                    <Setter TargetName="EyeDropBorder" Property="Color" Value="{Binding Path=Color, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                                    <Setter TargetName="PART_Image" Property="Source" Value="pack://application:,,,/Syncfusion.Shared.WPF;component/Controls/ColorPicker/Images/EyeDropColor.png" />
                                </Trigger>
                                <Trigger Property="IsAlphaVisible" Value="False">
                                    <Setter TargetName="AlphaText" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="AlphaSlider" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="AlphaValue" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="EnableGradientToSolidSwitch" Value="false">
                                    <Setter TargetName="EnableSwitch" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="PickerColorBar" Property="Width" Value="{Binding Path=ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shared:ColorEdit}}}" />
                                    <Setter TargetName="PickerColorBar" Property="Grid.ColumnSpan" Value="4" />
                                </Trigger>
                                <Trigger Property="BrushMode" Value="Solid">
                                    <Setter TargetName="GridBorder" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="Grid" Property="Margin" Value="2" />
                                </Trigger>
                                <Trigger Property="IsOpenGradientPropertyEditor" Value="True">
                                    <Setter TargetName="GradPopup" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="LinearGrid" Property="Visibility" Value="Visible" />
                                </Trigger>
                                <Trigger Property="IsOpenGradientPropertyEditor" Value="False">
                                    <Setter TargetName="GradPopup" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="LinearGrid" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="RadialGrid" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                                <Trigger Property="IsGradientPropertyEnabled" Value="False">
                                    <Setter TargetName="GridBorder" Property="Visibility" Value="Collapsed" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>

            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="VisualizationStyle" Value="ClassicHSV" />
                    <Condition Property="GradientPropertyEditorMode" Value="Popup" />
                    <Condition Property="ThumbTemplate" Value="{x:Null}" />
                </MultiTrigger.Conditions>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type shared:ColorEdit}">
                            <Border
                                Name="ColorEditBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                                <Grid Background="{TemplateBinding Background}" ClipToBounds="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.005*" />
                                        <ColumnDefinition Width="0.995*" />
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Name="ColorPalitte"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="3,3,3,6"
                                        Background="{shared:HSVBackgroundBrush Background}" />
                                    <Canvas
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        ClipToBounds="True">
                                        <Ellipse
                                            Canvas.Left="{Binding Path=SelectorPositionX, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shared:ColorEdit}}}"
                                            Canvas.Top="{Binding Path=SelectorPositionY, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shared:ColorEdit}}}"
                                            Width="10"
                                            Height="10"
                                            Stroke="{Binding InvertColor, Converter={StaticResource ColorToBrush}, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <Popup
                                            Name="WordKnownColorsPopup"
                                            AllowsTransparency="True"
                                            HorizontalOffset="{Binding Path=WordKnownColorsPositionX, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shared:ColorEdit}}}"
                                            IsOpen="{Binding Path=IsKeyboardFocusWithin, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            PlacementRectangle="0,0,0,0"
                                            VerticalOffset="{Binding Path=WordKnownColorsPositionY, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type shared:ColorEdit}}}">
                                            <Border
                                                BorderBrush="Black"
                                                BorderThickness="1"
                                                ClipToBounds="True"
                                                CornerRadius="2">
                                                <Border.Background>
                                                    <SolidColorBrush>
                                                        <SolidColorBrush.Color>
                                                            <Color
                                                                A="200"
                                                                B="255"
                                                                G="255"
                                                                R="255" />
                                                        </SolidColorBrush.Color>
                                                    </SolidColorBrush>
                                                </Border.Background>
                                                <TextBox
                                                    Name="WordKnownColorsTextBox"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="Black"
                                                    IsReadOnly="True"
                                                    Text="{TemplateBinding Color,
                                                                           Converter={StaticResource ColorToWordKnownColors}}" />
                                            </Border>
                                        </Popup>
                                    </Canvas>
                                    <Slider
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        Margin="5,0,5,6"
                                        Background="{shared:HSVBackgroundBrush VerticalSlider}"
                                        Maximum="{Binding Path=SliderMaxValueHSV, RelativeSource={RelativeSource TemplatedParent}}"
