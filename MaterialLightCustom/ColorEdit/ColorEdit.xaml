                                                                            MinHeight="25"
                                                                            Margin="1"
                                                                            MaxValue="1"
                                                                            MinValue="-1"
                                                                            Step="0.01" />
                                                                        <shared:UpDown
                                                                            x:Name="centrey"
                                                                            Width="70"
                                                                            MinHeight="25"
                                                                            Margin="1"
                                                                            MaxValue="1"
