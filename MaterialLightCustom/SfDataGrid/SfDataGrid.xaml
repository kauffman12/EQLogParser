                                    </Grid>
                                    <StackPanel Name="PART_StackPanel"
                                                MaxHeight="30"
                                                Orientation="Horizontal" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
