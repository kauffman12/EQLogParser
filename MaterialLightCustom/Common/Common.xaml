    <Style x:Key="KeyboardFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Margin="-1" BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FF9E9E9E">
                        <Border BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FFFFFFFF"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CheckKeyboardFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Margin="-2" BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FF9E9E9E">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FlatKeyboardFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FF9E9E9E">
                        <Border BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FFFFFFFF"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CircleKeyboardFocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Margin="-1" BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FF9E9E9E" CornerRadius="100">
                        <Border BorderThickness="{StaticResource MaterialLightCustom.BorderThickness1}" BorderBrush="#FFFFFFFF" CornerRadius="100"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
