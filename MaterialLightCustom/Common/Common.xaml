<FontWeight x:Key="MaterialLightCustom.FontWeightNormal">Normal</FontWeight> 
<FontWeight x:Key="MaterialLightCustom.FontWeightMedium">Medium</FontWeight> 
<Thickness x:Key="MaterialLightCustom.BorderThickness">0,0,0,0</Thickness> 
