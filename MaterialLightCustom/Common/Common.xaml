	<sys:Double x:Key="MaterialLightCustom.StrokeThickness2">2</sys:Double>
<DoubleCollection x:Key="MaterialLightCustom.StrokeDashArray">1 2</DoubleCollection> 
<CornerRadius x:Key="MaterialLightCustom.ThemeCornerRadiusVariant1">2,2,2,2</CornerRadius> 
<CornerRadius x:Key="MaterialLightCustom.ThemeCornerRadiusVariant2">0,0,0,0</CornerRadius> 
<CornerRadius x:Key="MaterialLightCustom.CornerRadius2">2,2,2,2</CornerRadius> 
