	<Thickness x:Key="MaterialLightCustom.BorderThickness0002">0,0,0,2</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness1000">1,0,0,0</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness0100">0,1,0,0</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness0010">0,0,1,0</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness1110">1,1,1,0</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness1101">1,1,0,1</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness1011">1,0,1,1</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness0111">0,1,1,1</Thickness>
	<Thickness x:Key="MaterialLightCustom.BorderThickness0011">0,0,1,1</Thickness>
