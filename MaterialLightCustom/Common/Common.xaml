<Thickness x:Key="MaterialLightCustom.ThemeBorderThicknessVariant2">0,0,0,2</Thickness> 
<Thickness x:Key="MaterialLightCustom.FocusMargin">2,2,2,2</Thickness> 
<sys:Double x:Key="MaterialLightCustom.StrokeThickness">0</sys:Double>
