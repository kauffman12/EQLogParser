    <Style x:Key="SyncfusionPivotCalculatorStyle" 
           TargetType="{x:Type syncfusion:PivotCalculator}">
        <Setter Property="Height" Value="162" />
        <Setter Property="Width" Value="160" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type syncfusion:PivotCalculator}">
                    <Border x:Name="Bd"
                            Padding="2"
                            Effect="{StaticResource Default.ShadowDepth3}"
                            Background="{StaticResource PopupBackground}"
                            BorderBrush="{StaticResource BorderAlt}"
                            BorderThickness="{StaticResource MaterialDarkCustom.BorderThickness1}">
                        <Border.Margin>
                            8,0,8,8
                        </Border.Margin>
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

