                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="MonthChangeDirection" Value="Vertical">
                            <Setter TargetName="PreviousButtonPath" Property="Data" Value="M 541.537,173.589L 531.107,173.589L 536.322,167.49L 541.537,173.589 Z"/>
