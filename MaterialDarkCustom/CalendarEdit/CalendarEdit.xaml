                            <Setter TargetName="PreviousButtonPath" Property="Height" Value="4"/>
                            <Setter TargetName="NextButtonPath" Property="Data" Value="M 541.537,173.589L 531.107,173.589L 536.322,167.49L 541.537,173.589 Z"/>
