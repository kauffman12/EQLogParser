        x:Key="ToggleButtonStyle1"
        BasedOn="{StaticResource WPFToggleButtonStyle}"
        TargetType="{x:Type ToggleButton}">
        <Setter Property="Content">
            <Setter.Value>
                <Path
                    x:Name="small_down_arrow"
                    Width="7"
