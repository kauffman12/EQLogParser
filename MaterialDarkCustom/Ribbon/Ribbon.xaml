                            <Setter Property="Margin" Value="{StaticResource Item.Touch.Small.Margin}"/>
                            <Setter Property="Padding" Value="{StaticResource Item.Touch.Small.Padding}"/>
                            <Setter TargetName="IconContent"  Property="Margin" Value="{StaticResource Icon.Touch.Small.Margin}"/>
                            <Setter TargetName="label" Property="Margin" Value="{StaticResource Label.Touch.Small.Margin}"/>
                        </MultiTrigger>
                        <MultiTrigger>
