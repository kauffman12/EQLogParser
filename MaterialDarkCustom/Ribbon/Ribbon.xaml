                            <Setter Property="Margin" Value="{StaticResource Item.Normal.Small.Margin}"/>
                            <Setter Property="Padding" Value="{StaticResource Item.Normal.Small.Padding}"/>
                            <Setter TargetName="IconContent"  Property="Margin" Value="{StaticResource Icon.Normal.Small.Margin}"/>
                            <Setter TargetName="label" Property="Margin" Value="{StaticResource Label.Normal.Small.Margin}"/>
                        </MultiTrigger>
                        <MultiTrigger>
