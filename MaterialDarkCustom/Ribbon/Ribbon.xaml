                                <Condition Property="SizeForm" Value="ExtraSmall" />
                                <Condition Property="sfskin:SfSkinManager.SizeMode" Value="Default" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Height" Value="{StaticResource Item.Normal.Small.Height}"/>
                            <Setter Property="Margin" Value="{StaticResource Item.Normal.Small.Margin}"/>
                            <Setter Property="Padding" Value="{StaticResource Item.Normal.Small.Padding}"/>
