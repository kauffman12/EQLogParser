                                        Margin="5,0,5,3"
                                        Grid.Row="0"  
                                        Name="IconContent" 
                                        ContentTemplate="{TemplateBinding IconTemplate}" 
                                        Content="{Binding }" 
                                        Width="{Binding Path=IconSize, Converter={StaticResource SizeToDoubleConverter}, ConverterParameter=width, RelativeSource={RelativeSource TemplatedParent}}"
