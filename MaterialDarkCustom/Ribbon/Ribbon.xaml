                            </MultiTrigger.Conditions>
                            <Setter Property="Height" Value="{StaticResource Item.Touch.Large.Height}"/>
                            <Setter Property="Margin" Value="{StaticResource Item.Touch.Large.Margin}"/>
                            <Setter Property="Padding" Value="{StaticResource Item.Touch.Large.Padding}"/>
                            <Setter TargetName="IconContent"  Property="Margin" Value="{StaticResource Icon.Touch.Large.Margin}"/>
