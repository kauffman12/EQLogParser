                                                       Width="16"/>
                                        </ToggleButton>
                                        <ToggleButton HorizontalAlignment="Center"
                                                          Style="{StaticResource WPFHighlightBorderToggleButtonStyle}"
                                                          Padding="1"
                                                          Height="24"
                                                          Width="24"
                                                          Grid.Row="6" 
                                                          Grid.Column="5"    
                                                          IsChecked="{Binding VerticalBorder, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
