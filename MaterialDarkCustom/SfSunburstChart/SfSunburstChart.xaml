    <Style BasedOn="{StaticResource SyncfusionSfSunburstChartStyle}"
           TargetType="sunburstChart:SfSunburstChart" />

    <Style BasedOn="{StaticResource SyncfusionSunburstLegendStyle}"
           TargetType="sunburstChart:SunburstLegend" />
    
</ResourceDictionary>
